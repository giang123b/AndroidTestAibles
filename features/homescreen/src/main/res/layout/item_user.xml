<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="user"
            type="com.aibles.model.User" />

        <variable
            name="homeViewModel"
            type="com.example.homescreen.HomeViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:onClick="@{() -> homeViewModel.userClicksOnItem(user)}"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewAvatarUserItemUser"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/avatar"
            app:imageUrl="@{user.avatarUrl}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="32dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNameUserItemUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{user.login}"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewSalaryUserItemUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{user.id + `0000 $`}"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</layout>